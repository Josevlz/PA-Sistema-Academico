@model IEnumerable<DataModels.Asignatura>
<link href="~/Content/CSS custom/StyleSheet.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.js"></script>

@using (Ajax.BeginForm("PSTable", "Estudiante", null, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "dataTable", InsertionMode = InsertionMode.Replace }, new { id = "SampleForm" }))
{

    <div class="row">
        <div class="col-md-8">
    
            <table class="table table-bordered table-hover ">
                <tr>
                    <th class="col-md-2">
                        @Html.DisplayNameFor(model => model.Codigo)
                    </th>
                    <th class="col-md-4">
                        @Html.DisplayName("Asignatura")
                    </th>
                    <th class="col-md-1">
                        <span>Horario</span>
                    </th>
                    <th class="col-md-1"></th>
                </tr>

            @foreach (var item in Model)
            {
              <input type="hidden" name="id" value="@item.Id"/>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreAsig)
                        </td>
                        <td>
                            @Html.DropDownList("tanda", new List<SelectListItem>
                                { new SelectListItem { Text = "MATUTINO", Value = "MATUTINO", Selected=true},
                                  new SelectListItem { Text = "VESPERTINO", Value = "VESPERTINO"},
                                 new SelectListItem { Text = "NOCTURNO", Value = "NOCTURNO"}
                                  })

                        </td>
                        <td>
                          
                            <input id="addBtn"  type="submit" value="Añadir" />    
                        </td>
                    </tr>
                }
            </table>
           
        </div>
    </div>

 }

<script type="text/javascript">

    $('#addBtn').click(function () {
        location.reload();
    });

</script>